<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_send"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/colorBG"
    android:orientation="vertical"
    tools:context="com.example.ridhashabrina.utsmobpro.SendActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PESANAN ANDA"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:paddingBottom="10dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cake Pilihan"
        android:id="@+id/NamaCake"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="30dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tulis pesan pada kartu nama"
        android:id="@+id/EdPesan"
        android:maxLines="4"
        android:lines="4"
        android:background="@android:drawable/editbox_background_normal"
        android:paddingBottom="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Untuk : "
        android:paddingBottom="10dp"
        android:paddingTop="20dp"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/spinner_dropdown_background"
        android:id="@+id/SpTeman"
        android:entries="@array/IsiSp"
        android:text="Pilih Penerima">
    </Spinner>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dari :"
        android:paddingBottom="10dp"
        android:paddingTop="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background_normal"
        android:hint="Nama Pengirim"
        android:singleLine="true"
        android:id="@+id/NamaPengirim"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Submit"
        android:id="@+id/BtnSubmit"/>
</LinearLayout>
